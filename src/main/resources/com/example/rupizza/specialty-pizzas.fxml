<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="465.0" prefWidth="364.0" spacing="15" style="-fx-margin: 10;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SpecialtyPizzaController">

    <Label style="-fx-font-size: 24;" text="Order Specialty Pizza" translateY="15.0" />

    <HBox spacing="15" style="-fx-margin: 10;">
        <VBox style="-fx-margin: 10;">

            <VBox spacing="5" style="-fx-margin: 10;">
                <Label text="Ingredients" translateX="25.0" translateY="175.0" />
                <ScrollPane prefHeight="60" prefWidth="140" style="-fx-margin: 10;" translateX="25.0" translateY="170.0">
                    <TextArea fx:id="ingredientsTextArea" editable="false" prefHeight="177.0" prefWidth="134.0" wrapText="false" />
                </ScrollPane>
            </VBox>

            <VBox style="-fx-margin: 10;">
                <Label text="Price $" translateX="30.0" translateY="200.0" />
                <TextField fx:id="priceTextField" prefWidth="140" translateX="30.0" translateY="200.0" />
            </VBox>
        </VBox>

        <VBox spacing="10" style="-fx-margin: 10;" translateX="55.0" translateY="50.0">
            <Label text="Select Pizza Type:" />
            <ComboBox fx:id="pizzaTypeComboBox" prefHeight="26.0" prefWidth="101.0">
                <items>
                </items>
            </ComboBox>

            <Label text="Select Size:" />
            <RadioButton text="Small">
                <toggleGroup>
                    <ToggleGroup fx:id="sizeToggleGroup" />
                </toggleGroup>
            </RadioButton>
            <RadioButton text="Medium" />
            <RadioButton text="Large" />

            <Label text="Additional Options:" />
            <CheckBox text="Extra Sauce" />
            <CheckBox text="Extra Cheese" />
        </VBox>
    </HBox>
      <ImageView fitHeight="140.0" fitWidth="140.0" translateX="-85.0" translateY="-230.0">
          <image>
              <Image url="https://waynesburgpizza.com/wp-content/uploads/2019/12/Deluxe-1-scaled.jpg" />
          </image>
      </ImageView>

    <HBox spacing="10" style="-fx-margin: 10;">
        <VBox style="-fx-margin: 10;">
            <Button onAction="#placeOrder" text="Place Order" translateX="135.0" translateY="-50.0" />
        </VBox>
    </HBox>
</VBox>
