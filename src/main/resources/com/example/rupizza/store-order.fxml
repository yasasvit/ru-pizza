<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="377.0" prefWidth="513.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.StoreOrderController">

    <Label style="-fx-font-size: 24;" text="Store Orders" translateY="-15.0" />

    <HBox spacing="10">
        <Label text="Select Order:" translateX="25.0" translateY="5.0" />
        <ComboBox fx:id="orderComboBox" prefHeight="26.0" prefWidth="83.0" translateX="25.0" />
        <Label text="Order Total $" translateX="75.0" translateY="5.0" />
        <TextField fx:id="orderTotalTextField" editable="false" translateX="75.0" />
    </HBox>

    <VBox>
        <Label text="Order Details" translateX="20.0" translateY="20.0" />
        <TextArea fx:id="orderDetailsTextArea" editable="true" prefHeight="200.0" prefWidth="450.0" translateY="20.0" wrapText="true" />
    </VBox>

    <HBox spacing="10" style="-fx-padding: 10px;">
        <Button onAction="#cancelOrder" text="Cancel Order" translateX="30.0" translateY="20.0" />
        <Button onAction="#exportStoreOrders" text="Export Store Orders" translateX="225.0" translateY="20.0" />
    </HBox>

</VBox>
